# Ignore directories generated by Composer
/drush/contrib/
/vendor/
/web/core/
/web/modules/contrib/
/web/themes/contrib/
/web/profiles/contrib/
/web/libraries/

# Ignore sensitive information
/web/sites/*/*settings*.php
/web/sites/*/*services*.yml

# Ignore Drupal's file directory
/web/sites/*/files/
/web/sites/*/public
/web/sites/*/private

# Ignore paths that may contain temporary files
/sites/*/translations
/sites/*/tmp
/sites/*/cache

# Ignore SimpleTest multi-site environment.
/web/sites/simpletest

# Ignore drupal core (if not versioning drupal sources)
/.editorconfig
/.env.example
/.gitattributes
/composer.json
/composer.lock
/example.gitignore
/LICENSE.txt
/README.txt
/web/sites/example*.php
/web/sites/development.services.yml
/web/.csslintrc
/web/.editorconfig
/web/.eslintignore
/web/.eslintrc.json
/web/.htaccess
/web/autoload.php
/web/index.php
/web/robots.txt
/web/update.php
/web/web.config

# Ignore files generated by PhpStorm
/.idea/

# Ignore .env files as they are personal
/.env

# Ignore node_modules folder for sass theme
**/node_modules
